def sort_array(arr):
    low, middle, high = 0, 0, len(arr) - 1
    
    while middle <= high:
        if arr[middle] == 0:
            arr[low], arr[middle] = arr[middle], arr[low]
            low += 1
            middle += 1
        elif arr[middle] == 1:
            middle += 1
        else: 
            arr[middle], arr[high] = arr[high], arr[middle]
            high -= 1
    return arr


arr = [0, 1, 2, 1, 0, 2, 1, 0]
sorted_arr = sort_array(arr)
print(sorted_arr)  
